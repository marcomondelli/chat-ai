{
  "name": "chat-ai",
  "version": "1.0.0",
  "description": "Web app with AI-powered chat",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm ci && npm run build && cd ..",
    "start": "node server/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "openai": "^4.24.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
